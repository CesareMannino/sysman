{{#if removedUser}}
<div class='alert alert-success alert-dismissable fade show' role=alert>
  Crew member has been removed.
  <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
</div>
{{/if}}



<div class="row">
  <div class="col-6">
    <h1>Crew list</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addcrew" type="button" class="btn btn-primary align-self-center">+ Add Crew Member</a>
  </div>
</div>



<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      {{!-- <th scope="col">#</th> --}}
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">COC</th>
      <th scope="col">Expiration</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      {{!-- <th scope="row">{{this.id}}</th> --}}
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.coc}}</td>
      <td>{{this.expiration}}</td>
      <td class="text-end">
        <a href="/viewcrew/{{this.id}}" type="button" class="btn btn-light btn-small">
          <i=class="bi bi-eye"></i>View
        </a>
        <a href="/editcrew/{{this.id}}" type="button" class="btn btn-light btn-small">
          <i=class="bi bi-pencil"></i>Edit
        </a>
        <a href="/{{this.id}}" type="button" class="btn btn-danger">
          <i=class="bi bi-person-x"></i>Delete
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>